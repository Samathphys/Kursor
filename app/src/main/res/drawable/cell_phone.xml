<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color = "@color/bordercolor" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#FAFAFA" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>